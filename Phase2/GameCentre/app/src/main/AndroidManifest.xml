<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fall2018.csc2017.game_centre">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".LogInScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameManager"></activity>
        <activity android:name=".GameMenuActivity"></activity>
        <activity android:name=".ScoreboardActivity"></activity>
        <activity android:name=".sliding_tiles.SlidingTilesSettings"></activity>
        <activity android:name=".sliding_tiles.SlidingTilesGameActivity" />
        <activity android:name=".minesweeper.MinesweeperSettings"></activity>
        <activity android:name=".minesweeper.MinesweeperGameActivity"></activity>
        <activity android:name=".twenty_forty.TFSettings"></activity>
        <activity android:name=".twenty_forty.TFGameActivity"></activity>
    </application>

</manifest>